# ML Services Environment Configuration

# API Configuration
ENVIRONMENT="development"
PORT=8001
API_URL="http://localhost:3000"

# Redis Configuration (as connection URL)
REDIS_URL="redis://localhost:6379/1"

# MLflow Configuration
MLFLOW_TRACKING_URI="sqlite:///mlflow.db"
MLFLOW_ARTIFACT_ROOT="./mlflow-artifacts"
MLFLOW_EXPERIMENT_NAME="capnpay-ai-models"

# Logging
LOG_LEVEL="info"

# Model Configuration
MODEL_ARTIFACTS_PATH="./training/model_artifacts"
ENABLE_MODEL_TRAINING="false"

# Voice Intelligence Services
WHISPER_MODEL_SIZE="base"
OPENAI_API_KEY=""  # Optional: for enhanced voice processing

# Feature Store Configuration
FEATURE_STORE_BACKEND="memory"  # memory, redis, postgresql

# Performance Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=30
